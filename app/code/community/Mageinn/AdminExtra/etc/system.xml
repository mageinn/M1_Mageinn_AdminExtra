<config>
    <tabs>
        <mageinn translate="label" module="mageinn_adminextra">
            <label>Mageinn</label>
            <sort_order>100</sort_order>
        </mageinn>
    </tabs>
    <sections>
        <mageinn_adminextra translate="label" module="mageinn_adminextra">
            <label>AdminExtra</label>
            <tab>mageinn</tab>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label" module="mageinn_adminextra">
                    <label>General</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled>
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </enabled>
                        <duplicate_images_clear>
                            <label>Don't copy images when duplicating product</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </duplicate_images_clear>
                        <duplicate_url_clear>
                            <label>Reset URL key and uncheck "Create Permanent Redirect for old URL" after product duplication</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </duplicate_url_clear>
                    </fields>
                </general>
            </groups>
        </mageinn_adminextra>
    </sections>
</config>
